<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="20.0"
      xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.kaisse.controller.MainController">

  <padding>
    <Insets top="20.0" right="20.0" bottom="20.0" left="20.0" />
  </padding>

  <Label fx:id="loggedUserName" styleClass="title" />

  <HBox spacing="15" alignment="CENTER">
    <Button fx:id="userListButton" onAction="#goToUserList" text="User List" visible="false" managed="false" />
    <Button onAction="#goToPanel" text="Control Panel" />
    <Button onAction="#goToFinances" text="Finances" />
    <Button onAction="#goToOrder" text="Order" />
    <Button onAction="#goToTable" text="Table" />
    <Button onAction="#goToMenu" text="Menu" />
    <Button onAction="#handleLogout" text="Logout" />
  </HBox>
</VBox>
