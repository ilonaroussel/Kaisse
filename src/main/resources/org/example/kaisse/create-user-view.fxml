<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.kaisse.controller.CreateUserController">

   <VBox alignment="CENTER" spacing="15">
      <children>
         <Label text="Create User">
            <font>
               <Font size="50.0" />
            </font>
         </Label>

         <TextField fx:id="name" maxWidth="200" promptText="Name" />
         <PasswordField fx:id="password" maxWidth="200" promptText="Password" />
         <PasswordField fx:id="confirmPassword" maxWidth="200" promptText="Confirm Password" />
         <TextField fx:id="age" maxWidth="200" promptText="Age" />
         <TextField fx:id="job" maxWidth="200" promptText="Job" />

         <HBox alignment="CENTER" spacing="120">
            <children>
               <Label onMouseClicked="#handleBackClick" style="-fx-text-fill: blue; -fx-underline: true;" text="back" />
               <Button onAction="#handleSubmit" text="Submit" />
            </children>
         </HBox>
      </children>
   </VBox>

</StackPane>
