<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<StackPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="org.example.kaisse.controller.CreateUserController"
           prefWidth="600.0" prefHeight="400.0">

   <VBox alignment="CENTER" spacing="15">
      <children>
         <Label text="Create User">
            <font>
               <Font size="50.0"/>
            </font>
         </Label>

         <TextField fx:id="name" promptText="Name" maxWidth="200" />
         <PasswordField fx:id="password" promptText="Password" maxWidth="200" />
         <PasswordField fx:id="confirmPassword" promptText="Confirm Password" maxWidth="200" />

         <HBox alignment="CENTER" spacing="120">
            <children>
               <Label text="back" style="-fx-text-fill: blue; -fx-underline: true;" onMouseClicked="#handleBackClick" />
               <Button text="Submit" onAction="#handleSubmit" />
            </children>
         </HBox>
      </children>
   </VBox>

</StackPane>
